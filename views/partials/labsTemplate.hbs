<div class="col-md-12" id="mainLabsTemplate" data-labs-target="{{labStoreTarget}}">
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h5 class="card-title text-center">Laboratori</h5>
            <div class="card-text">
                <table class="table table-hover table-responsive-sm" id="labsList">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nome</th>
                            <th scope="col">Descrizione</th>
                            <th scope="col">Aula</th>
                            <th scope="col">Operzaioni</th>
                        </tr>
                    </thead>
                    <tbody id="labsListTbody">
                        {{#each labsList}}
                        <tr class="lab-row" id="lab{{this.labID}}">
                            <th scope="row">{{this.labID}}</th>
                            <td>{{this.labName}}</td>
                            <td>{{this.labDesc}}</td>
                            <td>{{this.labAula}}</td>
                            <td class="d-none">{{this.labPostiOra1}}</td>
                            <td class="d-none">{{this.labClassiOra1}}</td>
                            <td class="d-none">{{this.labPostiOra2}}</td>
                            <td class="d-none">{{this.labClassiOra2}}</td>
                            <td class="d-none">{{this.labPostiOra3}}</td>
                            <td class="d-none">{{this.labClassiOra3}}</td>
                            <td class="d-none">{{this.labPostiOra4}}</td>
                            <td class="d-none">{{this.labClassiOra4}}</td>
                            <td class="d-none">{{this.lastsTwoH}}</td>
                            <td>
                                <i class="fas fa-list-ul p-1 mx-1 text-primary" role="button" onclick="viewLab({{this.labID}})"></i>
                                <i class="fas fa-edit p-1 mx-1 text-warning" role="button" onclick="editLab({{this.labID}})"></i>
                                <i class="fas fa-trash-alt p-1 mx-1 text-danger" role="button" onclick="deleteLab({{this.labID}})"></i>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                <div class="text-center">
                    <button type="button" class="btn btn-success" onclick="newLab()">Aggiungi</button>
                </div>
            </div>
        </div>
    </div>

    {{> labsModal}}

    <!-- Modal delete-->
    <div class="modal fade" id="deleteLabModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Elimina laboratorio</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>
                        Sei sicuro di voler eliminare il laboratorio NÂ°<span id="labDeleteID"></span>?
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" id="labModalDeleteSubmit" onclick="submitDeleteLab(-1)">Si</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Annulla</button>
                </div>
            </div>
        </div>
    </div>
    <!--/Modal-->
</div>

<script src="/js/assembleaLabsTemplate.js" type="text/javascript" defer='defer'></script>
