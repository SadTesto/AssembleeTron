<!-- Modal create/edit/view-->
<div class="modal fade" id="labModal" tabindex="-1" data-method-required="create" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="labModalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="labModalForm">
                    <div class="row">
                        <div class="col-md-2 mb-3">
                            <label for="labID">ID</label>
                            <input type="text" class="form-control" id="labID" value="1" required disabled>
                        </div>
                        <div class="col-md-7 mb-3">
                            <label for="firstName">Nome</label>
                            <input type="text" class="form-control" id="labName" value="" required>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="labAula">Aula</label>
                            <input type="text" class="form-control" id="labAula" value="" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="labDesc">Descrizione</label>
                        <textarea class="form-control" id="labDesc" rows="3" required></textarea>
                    </div>
                    <div class="form-inline row py-3 mx-2 border-top">
                        <label class="col-sm-2 col-form-label" for="labPostiOra1">Ora 1</label>
                        <div class="col-sm-10">
                            <div class="row">
                                <div class="input-group col-sm-12 mb-2">
                                    <input type="number" class="form-control" id="labPostiOra1" value="0" required>
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">Posti</div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-group col-sm-12 mb-2">
                                    <select class="selectpicker form-control border" id="labClassiOra1" data-live-search="true" title="Seleziona le classi" data-hide-disabled="true" data-actions-box="true" multiple data-header="Seleziona le classi">
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-inline row py-3 mx-2 border-top">
                        <label class="col-sm-2 col-form-label" for="labPostiOra2">Ora 2</label>
                        <div class="col-sm-10">
                            <div class="row">
                                <div class="input-group col-sm-12 mb-2">
                                    <input type="number" class="form-control" id="labPostiOra2" value="0" required>
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">Posti</div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-group col-sm-12 mb-2">
                                    <select class="selectpicker form-control border" id="labClassiOra2" data-live-search="true" title="Seleziona le classi" data-hide-disabled="true" data-actions-box="true" multiple data-header="Seleziona le classi">
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-inline row py-3 mx-2 border-top">
                        <label class="col-sm-2 col-form-label" for="labPostiOra3">Ora 3</label>
                        <div class="col-sm-10">
                            <div class="row">
                                <div class="input-group col-sm-12 mb-2">
                                    <input type="number" class="form-control" id="labPostiOra3" value="0" required>
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">Posti</div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-group col-sm-12 mb-2">
                                    <select class="selectpicker form-control border" id="labClassiOra3" data-live-search="true" title="Seleziona le classi" data-hide-disabled="true" data-actions-box="true" multiple data-header="Seleziona le classi">
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-inline row py-3 mx-2 border-top">
                        <label class="col-sm-2 col-form-label" for="labPostiOra4">Ora 4</label>
                        <div class="col-sm-10">
                            <div class="row">
                                <div class="input-group col-sm-12 mb-2">
                                    <input type="number" class="form-control" id="labPostiOra4" value="0" required>
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">Posti</div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-group col-sm-12 mb-2">
                                    <select class="selectpicker form-control border" id="labClassiOra4" data-live-search="true" title="Seleziona le classi" data-hide-disabled="true" data-actions-box="true" multiple data-header="Seleziona le classi">
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-check mx-2 mt-3 mb-0">
                        <input type="checkbox" class="form-check-input" name="lastsTwoH" id="lastsTwoH">
                        <label class="form-check-label" for="lastsTwoH">Questo laboratorio dura 2 ore</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" id="labModalDismiss" data-dismiss="modal" onclick="clearForm()" style="display:none">Chiudi</button>
                <button type="button" class="btn btn-success" id="labModalSubmit">Salva</button>
                <button type="button" class="btn btn-danger" id="labModalReset" data-dismiss="modal" onclick="clearForm()">Annulla</button>
            </div>
        </div>
    </div>
</div>
